.footer {
  padding: 50rpx 0;
  text-align: center;
  background: var(--globalBgColor2);
  border-top: 1px solid var(--themeColor);
  color: var(--descColor);
  font-size: 30rpx;
  line-height: 1.8em;
}

.kefu {
  width: 100rpx;
  height: 100rpx;
  background: var(--themeColor);
  position: fixed;
  z-index: 10;
  bottom: 100rpx;
  right: 60rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx rgba(189, 160, 102, 0.8);
}

.kefu .btn {
  position: relative;
  z-index: 2;
  border-radius: 50%;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.kefu .pic {
  width: 85%;
  height: 85%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 1;
}

.kefu .line {
  width: 100%;
  height: 100%;
  border: 3px solid var(--themeColor);
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 50%;
  animation: emit 1s infinite;
}

@keyframes emit {
  0% {
  }
  100% {
    border-width: 1px;
    opacity: 0;
    transform: scale(1.5);
  }
}

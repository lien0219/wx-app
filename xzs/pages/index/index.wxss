.banner {
  padding-top: 30rpx;
}

.banner swiper {
  height: 460rpx;
}

.banner swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav {
  padding: 60rpx 30rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  display: inline-block;
  padding: 0 25rpx;
  text-align: center;
}

.scrollNav scroll-view .item .pic {
  width: 105rpx;
  height: 105rpx;
}

.scrollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.scrollNav scroll-view .item .text {
  font-size: 32rpx;
  color: var(--globalColor);
  padding-top: 10rpx;
}

.scrollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scrollNav scroll-view .item:last-child {
  padding-right: 0;
}

.about {
  padding: 50rpx 30rpx 80rpx;
  background: url(https://mp-3309c116-4743-47d6-9979-462d2edf878c.cdn.bspapp.com/cloudstorage/fcc4ad5c-56a5-4f30-b1bc-4d1d2f1f63a2.jpg) no-repeat;
  background-size: cover;
}

.about .content .row {
  line-height: 1.6em;
  text-indent: 2em;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx dashed var(--themeColor);
  color: var(--focusColor);
}

.about .content .row:first-child {
  padding-top: 0;
}

.about .content .row:last-child {
  padding-bottom: 0;
  border-bottom: none;
}

.news {
  padding: 50rpx 30rpx;
}
